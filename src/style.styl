#spell-calculator
  width: 100%
  display: flex
  flex-direction: row

#spec-view
  width: 80%
  flex-direction: column

  #spell-list
    display: flex
    flex-direction: row

    .spell
      flex-direction: column
      margin: 5px 5px 5px 5px

      .spell-icon
        width: 56px
        height: 56px

        &.known
          opacity: 1
        &.unknown
          opacity: .5

#spec-list
  width: 20%
  flex-direction: column
